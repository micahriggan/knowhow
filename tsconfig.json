{
  "compilerOptions": {
    "lib": ["es5", "es6", "es2022", "dom"],
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "declaration": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "esnext",
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "./src/*"]
    },
    "outDir": "ts_build",
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.ignore.ts"
  ]
}
